<body>
  <%= render "shared/left_panel" %>
  <div id="right-panel" class="right-panel">
    <div class="breadcrumbs">
      <div class="col-sm-4">
        <div class="page-header float-left">
          <div class="page-title">
            <h1>Dashboard</h1>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="page-header float-right">
          <div class="page-title">
            <ol class="breadcrumb text-right">
              <li><a href="#">Dashboard</a></li>
              <li><a href="#">資料</a></li>
              <li class="active">作物綁定</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <div class="content mt-3">
      <div class="animated fadeIn">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <%= form_for @category_work_ship, :url => create_binding_farming_categories_path(@category_work_ship), :method => :post, :html => {:class => 'form-horizontal'} do |f| %>
                <div class="card-header">
                  <strong class="card-title"></strong>
                </div>
                <div class="card-body card-block">
                  <div class="row form-group">
                    <div class="col col-md-3">
                      <%= f.label("作物名稱", :class => 'form-control-label') %>
                    </div>
                    <div class="col-12 col-md-9">
                      <%= f.select :farming_category_id, options_from_collection_for_select(@crop, "id", "name") %>
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col col-md-3">
                      <%= f.label("綁定事項", :class => 'form-control-label') %>
                    </div>
                    <div class="col-12 col-md-9">
                      <%= f.text_field :work_project_id, 'data-tokeninput' => { collection: @work_projects, options: { theme: 'facebook'} }.to_json %>
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Submit
                  </button>
                  <button type="reset" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i> Reset
                  </button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>