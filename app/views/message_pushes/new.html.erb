<body>
  <%= render "shared/left_panel" %>
  <div id="right-panel" class="right-panel">
    <div class="breadcrumbs">
      <div class="col-sm-4">
        <div class="page-header float-left">
          <div class="page-title">
            <h1>Dashboard</h1>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="page-header float-right">
          <div class="page-title">
            <ol class="breadcrumb text-right">
              <li><a href="#">Dashboard</a></li>
              <li><a href="#">聊天內容</a></li>
              <li class="active">推送</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <div class="content mt-3">
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-header"><strong>新增</strong></div>
              <div class="card-body card-block">
                <%= form_for @message_pushes, :url => message_pushes_path(@message_pushes), :method => :post do |f| %>
                  <div class="form-group">
                    <%= f.label("模組進入點", :class => 'form-control-label') %><%= f.text_field(:module_name, :class => "form-control", placeholder: "輸入模組名稱")%>
                  </div>
                  <div class="form-group">
                    <%= f.label("傳送名單", :class => 'form-control-label') %>
                    <%= f.select :group_id, options_from_collection_for_select(@user_list, "id", "name") %>
                  </div>
                  <div class="form-group">
                    <%= f.label("目標Bot", :class => 'form-control-label') %>
                    <%= f.select :purpose, "<option value='1'>正式B2B</option><option value='2'>正式B2C</option><option value='3'>測試B2B</option><option value='3'>測試B2C</option>".html_safe %>
                  </div>
                  <div class="form-group">
                    <%= f.label("傳送時間", :class => 'form-control-label') %><%= f.datetime_local_field(:run_at, :class => "form-control", placeholder: "輸入傳送名單")%>
                  </div>
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm">
                      <i class="fa fa-dot-circle-o"></i> Submit
                    </button>
                    <button type="reset" class="btn btn-danger btn-sm">
                      <i class="fa fa-ban"></i> Reset
                    </button>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>