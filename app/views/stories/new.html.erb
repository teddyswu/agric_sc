<body>
  <%= render "shared/left_panel" %>
  <div id="right-panel" class="right-panel">
    <div class="breadcrumbs">
      <div class="col-sm-4">
        <div class="page-header float-left">
          <div class="page-title">
            <h1>Dashboard</h1>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="page-header float-right">
          <div class="page-title">
            <ol class="breadcrumb text-right">
              <li><a href="#">Dashboard</a></li>
              <li><a href="#">網頁內容</a></li>
              <li class="active">文章</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <div class="content mt-3">
      <div class="animated fadeIn">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                <strong class="card-title">Table List</strong>
              </div>
                <div class="card-body">
                  <table class="table">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">標題</th>
                        <th scope="col">網址</th>
                        <th scope="col">編輯</th>
                        <th scope="col">刪除</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @story_ten.each do |story|%>
                        <tr>
                          <th scope="row"><%= story.id %></th>
                          <td><%= story.title %></td>
                          <td><%= link_to "#{story_path(story.id)}",story_path(story.id) %></td>
                          <td><%= link_to "[edit]", edit_story_path(story.id)%></td>
                          <td><%= link_to "[del]", story_path(story.id), :method => :delete %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="card">
              <%= form_for @story, :url => stories_path(@story), :method => :post do |f| %>
                <div class="card-header"><strong>新增</strong></div>
                <div class="card-body card-block">
                  <div class="form-group">
                    <%= f.label("文章標題", :class => 'form-control-label') %><%= f.text_field(:title, :class => "form-control", placeholder: "輸入文章標題")%>
                  </div>
                  <div class="form-group">
                    <%= f.label("文章內容", :class => 'form-control-label') %><%= f.text_area(:content, :class => "form-control", placeholder: "輸入文章內容")%>
                  </div>
                  <script>
							      CKEDITOR.replace( 'story_content' );
							      CKEDITOR.config.height = 400;
							    </script>
                  <div class="form-group">
                    <%= f.label("擁有者", :class => 'form-control-label') %><%= f.text_field(:owner, :class => "form-control", placeholder: "輸入文章描述", :value => current_user.email, :readonly => true)%>
                  </div>
                </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Submit
                  </button>
                  <button type="reset" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i> Reset
                  </button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>