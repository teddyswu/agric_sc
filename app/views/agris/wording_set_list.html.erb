<body>
  <%= render "shared/left_panel" %>
  <div id="right-panel" class="right-panel">
    <div class="breadcrumbs">
      <div class="col-sm-4">
        <div class="page-header float-left">
          <div class="page-title">
            <h1>Dashboard</h1>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="page-header float-right">
          <div class="page-title">
            <ol class="breadcrumb text-right">
              <li><a href="#">Dashboard</a></li>
              <li><a href="#">網頁內容</a></li>
              <li class="active">文案</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <div class="content mt-3">
      <div class="animated fadeIn">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                <strong class="card-title"></strong><%= link_to "新增", wording_set_new_path%>
              </div>
                <div class="card-body">
                  <table class="table">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col">對象</th>
                        <th scope="col">類型</th>
                        <th scope="col">關鍵字</th>
                        <th scope="col">編輯</th>
                        <th scope="col">刪除</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @specify_keywords.each do |sk|%>
                        <tr>
                          <th scope="row"><%= specify_keyword_role(sk.role) %></th>
                          <td><%= specify_keyword_type(sk.keyword_type) %></td>
                          <td><%= sk.keyword %></td>
                          <td><%= link_to "[set]", wording_set_edit_path(sk.id)%></td>
                          <td><%= link_to "[delete]", wording_set_delete_path(sk.id), :method => :delete %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>