<body>
  <%= render "shared/left_panel" %>
  <div id="right-panel" class="right-panel">
    <div class="breadcrumbs">
      <div class="col-sm-4">
        <div class="page-header float-left">
          <div class="page-title">
            <h1>Dashboard</h1>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="page-header float-right">
          <div class="page-title">
            <ol class="breadcrumb text-right">
              <li><a href="#">Dashboard</a></li>
              <li><a href="#">網頁內容</a></li>
              <li class="active">REF使用者輸入</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <div class="content mt-3">
      <div class="animated fadeIn">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                <strong class="card-title"></strong>
              </div>
                <div class="card-body">
                  <%= form_for @wording_jsons, :url => wording_json_update_path, method: "patch" do |f| %>
                    <div class="form-group">
                      <%= f.label("名稱", :class => 'form-control-label') %><%= @wording_jsons.name %>
                    </div>
                    <div class="form-group">
                      <%= f.label("自定義名稱", :class => 'form-control-label') %><%= f.text_field(:def_name, :class => "form-control", placeholder: "輸入名稱")%>
                    </div>
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> 送出
                      </button>
                      <button type="reset" class="btn btn-danger btn-sm">
                        <i class="fa fa-ban"></i> 清除
                      </button>
                    </div>
                  <% end %>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>