<body>
  <%= render "shared/left_panel" %>
  <div id="right-panel" class="right-panel">
    <div class="breadcrumbs">
      <div class="col-sm-4">
        <div class="page-header float-left">
          <div class="page-title">
            <h1>Dashboard</h1>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="page-header float-right">
          <div class="page-title">
            <ol class="breadcrumb text-right">
              <li><a href="#">Dashboard</a></li>
              <li><a href="#"><%= @farm.farm_name %></a></li>
              <li class="active">農場用戶管理</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <div class="content mt-3">
      <div class="animated fadeIn">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                <strong class="card-title">新增</strong>
              </div>
              <div class="card-body">
                <%= form_for @fu, :url => post_user_user_manages_path(@fu), :method => :post, :html => {:class => 'form-horizontal'} do |f| %>
                  <%= f.hidden_field(:farmer_profile_id, :value => params[:id])%>
                  <div class="row form-group">
                    <div class="col col-md-3">
                      <%= f.label("會員編號", :class => 'form-control-label') %>
                    </div>
                    <div class="col-12 col-md-9">
                      <%= f.text_field(:user_id, :class => "form-control", :maxlength => 20)%>
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col col-md-3">
                      <%= f.label("B2B app uid", :class => 'form-control-label') %>
                    </div>
                    <div class="col-12 col-md-9">
                      <%= f.text_field(:uid, :class => "form-control", :maxlength => 20)%>
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col col-md-3">
                      <%= f.label("管理權限", :class => 'form-control-label') %>
                    </div>
                    <div class="col-12 col-md-9">
                      <%= f.select :permission, options_for_select([["作業員", "1"], ["管理員", "2"],["經理人","3"]]), {},{ :class => "form-control"}%>
                    </div>
                  </div>
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm">
                      <i class="fa fa-dot-circle-o"></i> Submit
                    </button>
                    <button type="reset" class="btn btn-danger btn-sm">
                      <i class="fa fa-ban"></i> Reset
                    </button>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
  </script>
</body>