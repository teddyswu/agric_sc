<body>
  <%= render "shared/left_panel" %>
  <div id="right-panel" class="right-panel">
    <div class="breadcrumbs">
      <div class="col-sm-4">
        <div class="page-header float-left">
          <div class="page-title">
            <h1>Dashboard</h1>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="page-header float-right">
          <div class="page-title">
            <ol class="breadcrumb text-right">
              <li><a href="#">Dashboard</a></li>
              <li><a href="#">資料</a></li>
              <li class="active">會員</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <div class="content mt-3">
      <div class="animated fadeIn">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                <strong class="card-title">Table List</strong>
                <%= link_to "產銷班管理", ps_groups_path, :class => "btn btn-secondary"%>
              </div>
                <div class="card-body">
                  <table class="table">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col">農場編號</th>
                        <th scope="col">農場名稱</th>
                        <th scope='col'>管理</th>
                        <th scope='col'>狀態</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @users.each do |user|%>
                        <tr>
                          <th scope="row"><%= user.id %></th>
                          <td><%= user.farm_name%></td>
                          <td><%= link_to "[edit]", edit_user_manage_path(user.id)%></td>
                          <td><%= link_to render_enabled(user.status), user_manage_path(user.id), :method => :DELETE %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <%= will_paginate @users %>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>