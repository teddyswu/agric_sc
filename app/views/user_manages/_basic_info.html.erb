<div class="card">
  <div class="card-header">
    <strong>友善農民基本資料</strong>
  </div>
  <div class="card-body card-block">
    <%= form_for @user.user_profile, :url => user_profile_path(@user), :method => :patch, :html => {:class => 'form-horizontal'} do |f| %>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("會員編號", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:user_id, :class => "form-control", :value => @user.id, :readonly => true)%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("FB Uid", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:fb_uid, :class => "form-control", :value => @user.user_profile.fb_uid, :readonly => true, :disabled => true)%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("FB專頁", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:fb_url, :class => "form-control")%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("產銷班", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:ps_group, :class => "form-control")%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("農場名稱", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:farm_name, :class => "form-control")%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("經營農戶姓名", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:name, :class => "form-control")%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("聯絡電話", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:tel, :class => "form-control")%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("手機號碼", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:cell_phone, :class => "form-control")%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("住址", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:address, :class => "form-control")%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("驗證機構", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:certification_body, :class => "form-control")%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("驗證作物種類", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field :category, 'data-tokeninput' => { collection: @los_farms, options: { theme: 'facebook',prePopulate: @default} }.to_json %>
          <%#= f.text_field(:category, :class => "form-control")%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("農作名稱", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:crop_name, :class => "form-control")%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("田區代號", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= text_field_tag 'filed_code', @filed_code, class: 'form-control', :disabled => true  if @filed_code != "" %>
          <%= text_field_tag 'filed_code', @filed_code, class: 'form-control' if @filed_code == ""%>
          <span class="help-block" style ="color :red">請使用底線隔開，如A_B_C</span>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("有機證書", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:certificate_photo, :class => "form-control", :value => @user.user_profile.certificate_photo, :readonly => true)%>
          <span class="btn btn-success fileinput-button">
            <span>上傳檔案</span>
            <!-- The file input field used as target for the file upload widget -->
            <input id="fileupload" type="file" name="files[]">
          </span>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("有機證書2", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:certificate_photo_2, :class => "form-control", :value => @user.user_profile.certificate_photo_2, :readonly => true)%>
          <span class="btn btn-success fileinput-button">
            <span>上傳檔案</span>
            <!-- The file input field used as target for the file upload widget -->
            <input id="fileupload_2" type="file" name="files[]">
          </span>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("有機驗證字號", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.text_field(:oc_num, :class => "form-control")%>
        </div>
      </div>
      <div class="row form-group">
        <div class="col col-md-3">
          <%= f.label("證書有效期限", :class => 'form-control-label') %>
        </div>
        <div class="col-12 col-md-9">
          <%= f.datetime_local_field(:validity_period, :class => "form-control")%>
        </div>
      </div>
      <div class="card-footer">
        <button type="submit" class="btn btn-primary btn-sm">
          <i class="fa fa-dot-circle-o"></i> Submit
        </button>
        <button type="reset" class="btn btn-danger btn-sm">
          <i class="fa fa-ban"></i> Reset
        </button>
      </div>
    <% end %>
  </div>
</div>