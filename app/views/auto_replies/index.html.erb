<body>
  <%= render "shared/left_panel" %>
  <div id="right-panel" class="right-panel">
    <div class="breadcrumbs">
      <div class="col-sm-4">
        <div class="page-header float-left">
          <div class="page-title">
            <h1>Dashboard</h1>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="page-header float-right">
          <div class="page-title">
            <ol class="breadcrumb text-right">
              <li><a href="#">Dashboard</a></li>
              <li><a href="#">網頁內容</a></li>
              <li class="active">臉書自動回覆</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <div class="content mt-3">
      <div class="animated fadeIn">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                <strong class="card-title">Table List</strong> <%= link_to "新增", new_auto_reply_path%>
              </div>
                <div class="card-body">
                  <table class="table">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col">名稱</th>
                        <th scope="col">狀態</th>
                        <th scope="col">編輯</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @auto_replies.each do |ar|%>
                        <tr>
                          <th scope="row"><%= ar.name%></th>
                          <th><%= link_to render_enabled(ar.enabled), auto_reply_path(ar.id), :method => :delete %></th>
                          <th><%= link_to "[set]", edit_auto_reply_path(ar.id) %></th>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                  <%= will_paginate @auto_replies%>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>