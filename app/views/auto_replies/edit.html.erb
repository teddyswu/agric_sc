<script>
  function drBut() {
    document.getElementById("rr_but").disabled = false;
    document.getElementById("dr_but").disabled = true;
    $("#default_reply").show();
    $("div[id^='rule_reply']").hide();
  };
  function apBut() {
    var sn = $("#rule_butt_num").val();
