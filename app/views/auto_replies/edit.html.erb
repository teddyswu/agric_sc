		                        </div>
		                        <div class="col col-md-1">
		                        	<button type="button" class="btn btn-danger btn-sm" onclick="del('auto_reply_message<%= i+1%>')">X</button>
		                        </div>
		                      </div>
                    		</div>
                    	<% end %>
                    </div>
                  </div>
                </div>
