<body>
  <%= render "shared/left_panel" %>
  <div id="right-panel" class="right-panel">
    <div class="breadcrumbs">
      <div class="col-sm-4">
        <div class="page-header float-left">
          <div class="page-title">
            <h1>Dashboard</h1>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="page-header float-right">
          <div class="page-title">
            <ol class="breadcrumb text-right">
              <li><a href="#">Dashboard</a></li>
              <li><a href="#">網頁內容</a></li>
              <li class="active">站台設定</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <div class="content mt-3">
      <div class="animated fadeIn">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                <strong class="card-title">Table List</strong> 
                <% if @domain.present? %>
                  <%= link_to "編輯", edit_domain_path(@domain.id) %>
                <% else %>
                  <%= link_to "新增", new_domain_path%>
                <% end %>
              </div>
                <div class="card-body">
                  <table class="table">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col">名稱</th>
                        <th scope="col">定義</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">季節</th>
                        <th><%= @domain.def_season if @domain.present? %></th>
                      </tr>
                      <tr>
                        <th scope="row">星期</th>
                        <th><%= @domain.def_week if @domain.present? %></th>
                      </tr>
                    </tbody>
                  </table>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>