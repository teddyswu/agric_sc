<body>
  <%= render "shared/left_panel" %>
  <div id="right-panel" class="right-panel">
    <div class="breadcrumbs">
      <div class="col-sm-4">
        <div class="page-header float-left">
          <div class="page-title">
            <h1>Dashboard</h1>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="page-header float-right">
          <div class="page-title">
            <ol class="breadcrumb text-right">
              <li><a href="#">Dashboard</a></li>
              <li><a href="#">聊天內容</a></li>
              <li class="active">會員參數設定</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <div class="content mt-3">
      <div class="animated fadeIn">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                <strong class="card-title">資料類別</strong> 
              </div>
              <div class="card-body">
                <%= form_for @data, :url => data_update_consultation_path(@data), :method => :patch do |f| %>
                  <div class="form-group">
                    <%= f.label("類別名稱", :class => 'form-control-label') %><%= f.text_field(:name, :class => "form-control", placeholder: "輸入類別名稱")%>
                  </div>
                  <div class="form-group">
                    <%= f.label("類別介紹", :class => 'form-control-label') %><%= f.text_field(:intro, :class => "form-control", placeholder: "輸入類別介紹")%>
                  </div>
                  <div class="form-group">
                    <%= f.label("類別圖片", :class => 'form-control-label') %><%= f.text_field(:pic, :class => "form-control", placeholder: "輸入圖片url")%>
                  </div>
                  <div class="form-group" id="json_text">
                    <%= f.label("排序", :class => 'form-control-label') %><%= f.number_field(:sort, :class => "form-control", placeholder: "輸入排序")%>
                  </div>
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm">
                      <i class="fa fa-dot-circle-o"></i> Submit
                    </button>
                    <button type="reset" class="btn btn-danger btn-sm">
                      <i class="fa fa-ban"></i> Reset
                    </button>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>